@model IEnumerable<QuanLyDoAn.DeTai>

@{
    ViewBag.Title = "QUẢN LÝ ĐỀ TÀI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 align="center">DANH SÁCH ĐỀ TÀI ĐANG HƯỚNG DẪN</h3>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tenDeTai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.soSVThamGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ghiChu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.soSVDaDangKy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenDeTai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soSVThamGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ghiChu)
            </td>
            <td>
                <p> <span class="capnhatsoluong">@item.soSVDaDangKy</span>/<span>@item.soSVThamGia </span></p>
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "EditDeTai", new { id = item.maDeTai }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.maDeTai }) |
                @Html.ActionLink("Chấm điểm", "ChamDiem", new { id = item.maDeTai })
            </td>
        </tr>
    }

</table>
